@model Community.ViewModels.ReadMessageViewModel

@{
    ViewData["Title"] = "Inbox";
}

<h1>Inbox</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Choose">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Sender" class="control-label"></label>
                <select asp-for="Sender" asp-items="Model.senders"></select>
                <span asp-validation-for="Sender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Choose" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoOfTotMsg)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoOfTotMsg)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoOfReadMsg)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoOfReadMsg)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NoOfDeletedMsg)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NoOfDeletedMsg)
            </dd>
        </dl>
</div>